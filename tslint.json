{
	"extends": "tslint-config-standard",
	"rules": {
		"indent": [
			true,
			"tabs",
			4
		],
		"ter-indent": [
			true,
			"tab"
		],
		"space-before-function-paren": [
			true,
			{
				"anonymous": "never",
				"named": "never",
				"asyncArrow": "always"
			}
		],
		"trailing-comma": [
			true,
			{
				"multiline": "always",
				"singleline": "never"
			}
		]
	}
}
